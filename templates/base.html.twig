{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8"/>
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
	    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.10.0/dist/css/uikit.min.css" />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"> {% block stylesheets %}{% endblock %}
		</head>
		<body>
			<nav class="uk-navbar-container" uk-navbar="offset:0;mode:click">
                <div class="uk-navbar-right uk-margin-large-right">
                    <ul class="uk-navbar-nav">
                        <li><a href={{path('livre_index')}}><i class="fas fa-book"></i> Livres</a></li>
                        <li><a href={{path('auteur_index')}}><i class="fas fa-feather-alt"></i> Auteurs</a></li>
                        <li><a href={{path('genre_index')}}><i class="fas fa-i-cursor"></i> Genres</a></li>
                    </ul>
                </div>
                
                <div class="uk-navbar-right uk-margin-large-right">
                    <ul class="uk-navbar-nav">
                    {% if not app.user %}
                        <li><a href={{path('app_login')}}><i class="fas fa-user-friends"></i> Login</a></li>
                        <li><a href={{path('app_register')}}><i class="fas fa-sign-in"></i> Sign in</a></li>
                    {% endif %}
                    {% if app.user  %}
                        {% if app.user.roles[0]=="ROLE_ADMIN"  %}
                            <li><a href="#">ADMIN</a></li>
                        {% endif %}
                        <li><a href={{path('app_logout')}}><i class="fas fa-sign-out-alt"></i> LogOut</a></li>
                    {% endif %}
                    </ul>
                </div>
            </nav>
			
			<div class="container mt-5"> {% block body %}{% endblock %}{% block javascripts %}{% endblock %}
				</div>
			</body>
		</html>
